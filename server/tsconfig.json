{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "./src",
    "paths": {
      "@src/*": ["./*"],
      "@_workspace/*": ["./_workspace/*"],
      "@config/*": ["./config/*"],
      "@controllers/*": ["./_workspace/controllers/*"],
      "@models/*": ["./_workspace/models/*"],
      "@services/*": ["./_workspace/services/*"],
      "@sql/*": ["./_workspace/sql/*"],
      "@routes/*": ["./_workspace/routes/*"],
      "@middlewares/*": ["./middlewares/*"],
      "@types/*": ["./types/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
